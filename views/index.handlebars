<div class="row">
    <div class="col-12">
        <div class="greet">
            <h1>Greeting</h1>
        </div>
    </div>
</div>

<form action="/greetings" method="POST">

    <div class="row">
        <div class=" col-12">
            <div class="name">
                <span>
                    Name:
                </span>
                <span>
                    <input class="fname" type="text" id="textName" pattern='[A-Za-z\\s]*'
                        title="Names should only consist of letters" name="name">
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="data">
                    <a href="/greeted">Users Greeted:</a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="greetingDiv" name="greetingDiv">{{names}}</div>

            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="counter">Counter: {{counter}}</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="error">{{messages}}</div>
            </div>
        </div>


        <div class="row">
            <div class="col-12">
                <div class="radioBtn">

                    <label class="radio-inline">

                        <span>
                            <input type="radio" name="language" value="English" class="language" id="language">
                            English
                        </span>
                        <span>
                            <input type="radio" name="language" value="isiXhosa" class="language">
                            isiXhosa
                        </span>

                        <span>
                            <input type="radio" name="language" value="Afrikaans" class="language">
                            Afrikaans
                        </span>
                    </label>

                </div>

            </div>

        </div>

        <div class="row">
            <div class="col-12">
                <form action="/name" method="POST">
                    <input type="submit" name="greetBtn" class="clicked" value="Greet Me">
                    <p id="lang"></p>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <form action="/nameCleared" method="POST">
                    <input type="submit" name="resetGreet" class="clickReset" value="Reset Greeting">
                </form>
            </div>
        </div>


    </div>
</form>